# Jaeger All-in-One Deployment for Distributed Tracing
# Suitable for development and small production workloads.
# For large scale, use Jaeger Operator with Elasticsearch/Cassandra backend.
#
# Variables:
#   {{NAMESPACE}}          - Target namespace (e.g., monitoring)
#   {{STORAGE_TYPE}}       - Storage backend: memory | badger | elasticsearch
#   {{RETENTION_HOURS}}    - Trace retention in hours (e.g., 72 = 3 days)
#   {{MAX_TRACES}}         - Max traces in memory (e.g., 100000)

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: jaeger
  namespace: {{NAMESPACE}}
  labels:
    app: jaeger
    component: all-in-one
spec:
  replicas: 1
  selector:
    matchLabels:
      app: jaeger
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: jaeger
        component: all-in-one
      annotations:
        prometheus.io/scrape: "true"
        prometheus.io/port: "14269"
    spec:
      containers:
        - name: jaeger
          image: jaegertracing/all-in-one:1.54
          ports:
            # Jaeger UI
            - containerPort: 16686
              name: ui
              protocol: TCP
            # Collector gRPC (OpenTelemetry)
            - containerPort: 4317
              name: otlp-grpc
              protocol: TCP
            # Collector HTTP (OpenTelemetry)
            - containerPort: 4318
              name: otlp-http
              protocol: TCP
            # Collector Zipkin
            - containerPort: 9411
              name: zipkin
              protocol: TCP
            # Collector Jaeger Thrift
            - containerPort: 14268
              name: jaeger-http
              protocol: TCP
            # Admin/health
            - containerPort: 14269
              name: admin
              protocol: TCP
            # Agent compact thrift
            - containerPort: 6831
              name: agent-compact
              protocol: UDP
            # Agent binary thrift
            - containerPort: 6832
              name: agent-binary
              protocol: UDP
          env:
            - name: COLLECTOR_ZIPKIN_HOST_PORT
              value: ":9411"
            - name: COLLECTOR_OTLP_ENABLED
              value: "true"
            - name: SPAN_STORAGE_TYPE
              value: "{{STORAGE_TYPE}}"
            - name: MEMORY_MAX_TRACES
              value: "{{MAX_TRACES}}"
            - name: QUERY_MAX_CLOCK_SKEW_ADJUSTMENT
              value: "5s"
          resources:
            requests:
              cpu: 100m
              memory: 256Mi
            limits:
              cpu: 500m
              memory: 512Mi
          livenessProbe:
            httpGet:
              path: /
              port: 14269
            initialDelaySeconds: 10
            periodSeconds: 30
          readinessProbe:
            httpGet:
              path: /
              port: 14269
            initialDelaySeconds: 5
            periodSeconds: 10

---
apiVersion: v1
kind: Service
metadata:
  name: jaeger-collector
  namespace: {{NAMESPACE}}
  labels:
    app: jaeger
spec:
  type: ClusterIP
  ports:
    - name: otlp-grpc
      port: 4317
      targetPort: 4317
      protocol: TCP
    - name: otlp-http
      port: 4318
      targetPort: 4318
      protocol: TCP
    - name: zipkin
      port: 9411
      targetPort: 9411
      protocol: TCP
    - name: jaeger-http
      port: 14268
      targetPort: 14268
      protocol: TCP
  selector:
    app: jaeger

---
apiVersion: v1
kind: Service
metadata:
  name: jaeger-query
  namespace: {{NAMESPACE}}
  labels:
    app: jaeger
spec:
  type: ClusterIP
  ports:
    - name: ui
      port: 16686
      targetPort: 16686
      protocol: TCP
  selector:
    app: jaeger

---
apiVersion: v1
kind: Service
metadata:
  name: jaeger-agent
  namespace: {{NAMESPACE}}
  labels:
    app: jaeger
spec:
  type: ClusterIP
  ports:
    - name: agent-compact
      port: 6831
      targetPort: 6831
      protocol: UDP
    - name: agent-binary
      port: 6832
      targetPort: 6832
      protocol: UDP
  selector:
    app: jaeger

---
# Access Jaeger UI:
#   kubectl port-forward svc/jaeger-query 16686:16686 -n {{NAMESPACE}}
#   Open http://localhost:16686
#
# Send traces via OpenTelemetry:
#   OTEL endpoint: http://jaeger-collector.{{NAMESPACE}}:4317 (gRPC)
#   OTEL endpoint: http://jaeger-collector.{{NAMESPACE}}:4318 (HTTP)
#
# Send traces via Zipkin:
#   Zipkin endpoint: http://jaeger-collector.{{NAMESPACE}}:9411/api/v2/spans
#
# Send traces via Jaeger native:
#   Agent: jaeger-agent.{{NAMESPACE}}:6831 (UDP compact thrift)
#   Collector: jaeger-collector.{{NAMESPACE}}:14268 (HTTP)
