{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Prometheus data source",
      "type": "datasource",
      "pluginId": "prometheus"
    },
    {
      "name": "DS_LOKI",
      "label": "Loki",
      "description": "Loki data source",
      "type": "datasource",
      "pluginId": "loki"
    }
  ],
  "__requires": [],
  "annotations": { "list": [] },
  "description": "hackathon-todo Application Dashboard — RED metrics, resource usage, and logs",
  "editable": true,
  "id": null,
  "title": "{{APP_NAME}} — Application Overview",
  "uid": "{{DASHBOARD_UID}}",
  "tags": ["{{APP_NAME}}", "production", "application"],
  "timezone": "utc",
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "custom",
        "current": { "text": "production", "value": "production" },
        "options": [
          { "text": "production", "value": "production" },
          { "text": "staging", "value": "staging" }
        ]
      }
    ]
  },
  "panels": [
    {
      "__comment": "Row: RED Metrics",
      "type": "row",
      "title": "RED Metrics (Rate, Errors, Duration)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "title": "Request Rate (req/s)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "sum(rate(api_request_duration_seconds_count{namespace=\"$namespace\"}[5m])) by (path)",
          "legendFormat": "{{path}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "fillOpacity": 10, "lineWidth": 2 }
        }
      }
    },
    {
      "title": "Error Rate (%)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 1 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "100 * sum(rate(api_request_duration_seconds_count{namespace=\"$namespace\", status=~\"5..\"}[5m])) / sum(rate(api_request_duration_seconds_count{namespace=\"$namespace\"}[5m]))",
          "legendFormat": "5xx error rate"
        },
        {
          "expr": "100 * sum(rate(api_request_duration_seconds_count{namespace=\"$namespace\", status=~\"4..\"}[5m])) / sum(rate(api_request_duration_seconds_count{namespace=\"$namespace\"}[5m]))",
          "legendFormat": "4xx error rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": { "fillOpacity": 10, "lineWidth": 2 },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 2 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },
    {
      "title": "Response Time (p50 / p95 / p99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(api_request_duration_seconds_bucket{namespace=\"$namespace\"}[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(api_request_duration_seconds_bucket{namespace=\"$namespace\"}[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(api_request_duration_seconds_bucket{namespace=\"$namespace\"}[5m])) by (le))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "fillOpacity": 10, "lineWidth": 2 }
        }
      }
    },
    {
      "__comment": "Row: Application Metrics",
      "type": "row",
      "title": "Application Metrics",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "collapsed": false
    },
    {
      "title": "Tasks Created / Hour",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 10 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "sum(increase(tasks_created_total{namespace=\"$namespace\"}[1h]))",
          "legendFormat": "tasks/hr"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "thresholds" } }
      }
    },
    {
      "title": "Active Users",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 10 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "active_users{namespace=\"$namespace\"}",
          "legendFormat": "users"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          },
          "max": 200
        }
      }
    },
    {
      "title": "Pod Restarts (15m)",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 10 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "sum(increase(kube_pod_container_status_restarts_total{namespace=\"$namespace\"}[15m])) by (pod)",
          "legendFormat": "{{pod}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 3 }
            ]
          }
        }
      }
    },
    {
      "title": "HTTP Status Codes",
      "type": "piechart",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 10 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "sum(increase(api_request_duration_seconds_count{namespace=\"$namespace\"}[1h])) by (status)",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "__comment": "Row: Resource Usage",
      "type": "row",
      "title": "Resource Usage (CPU / Memory)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 16 },
      "collapsed": false
    },
    {
      "title": "Pod CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 17 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"$namespace\", container!=\"\"}[5m])) by (pod)",
          "legendFormat": "{{pod}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short", "custom": { "fillOpacity": 20 } }
      }
    },
    {
      "title": "Pod Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 17 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{namespace=\"$namespace\", container!=\"\"}) by (pod)",
          "legendFormat": "{{pod}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes", "custom": { "fillOpacity": 20 } }
      }
    },
    {
      "__comment": "Row: Logs",
      "type": "row",
      "title": "Application Logs",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 25 },
      "collapsed": false
    },
    {
      "title": "Recent Error Logs",
      "type": "logs",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 26 },
      "datasource": "${DS_LOKI}",
      "targets": [
        {
          "expr": "{namespace=\"$namespace\"} | json | level=~\"error|critical\"",
          "legendFormat": ""
        }
      ],
      "options": {
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true,
        "enableLogDetails": true
      }
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
